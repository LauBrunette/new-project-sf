{% extends 'base.html.twig' %}

{% block main %}

    <p>Formulaire d'insertion</p>

    {{ form_start(categoryFormView) }}

    <div class="title-form-article">
        {{ form_errors(categoryFormView.title) }}
        {{ form_label(categoryFormView.title, 'Titre', {'label_attr': {'class': 'test'}}) }}
        {{ form_widget(categoryFormView.title, {'attr': {'class': 'test'}}) }}
    </div>

    <div class="content-form-article">
        {{ form_errors(categoryFormView.description) }}
        {{ form_label(categoryFormView.description) }}
        {{ form_widget(categoryFormView.description, {'attr': {'class': 'test'}}) }}
    </div>

    <div class="createdat-form-article">
        {{ form_errors(categoryFormView.createdAt) }}
        {{ form_label(categoryFormView.createdAt) }}
        {{ form_widget(categoryFormView.createdAt, {'attr': {'class': 'test'}}) }}
    </div>

    <div class="submit-form-article">
        {{ form_widget(categoryFormView.submit, {'attr': {'class': 'test'}}) }}
    </div>

    {{ form_end(categoryFormView) }}
{% endblock %}